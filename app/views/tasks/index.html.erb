<h1>All Tasks</h1>

<ol>
  <% @tasks.each do |task| %>
  <li>

  <%= link_to task.title, task_path(task) %>
  </li>
  <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
      <p>Delete</p>
      <% end %>
  <% end %>
</ol>

<%= link_to "Add new task", new_task_path%>
